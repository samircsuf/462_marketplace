                  .w3-half
                    img.w3-margin-bottom(src='/w3images/fjords.jpg', style='width:100%')
          br
          // Interests
          .w3-card-2.w3-round.w3-white.w3-hide-small
            .w3-container
              p Services
              p
                span.w3-tag.w3-small.w3-theme-d5 Math
                span.w3-tag.w3-small.w3-theme-d4 Compuer Science
                span.w3-tag.w3-small.w3-theme-d3 Basket Weaving
                span.w3-tag.w3-small.w3-theme-d2 Civil Engineering
              p Rate
              p
                span.w3-tag.w3-small.w3-theme-d5 $25


          br
        .w3-col.m7
          .w3-row-padding
            .w3-col.m12
              .w3-card-2.w3-round.w3-white
                .w3-container.w3-padding
                  h6.w3-opacity Post job request on their wall!
                  textarea.form-control(required='', maxlength='200', rows='3', placeholder='Say something!')
                  div(style='text-align:right')
                    button.w3-button.w3-theme(type='button')
                      i.fa.fa-pencil
